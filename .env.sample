# ======================
# LLM模型配置
# ======================
# 选择使用的LLM模型类型 (siliconflow 或 deepseek)
LLM_TYPE=siliconflow

# ======================
# SiliconFlow配置
# ======================
# SiliconFlow API密钥
SILICONFLOW_API_KEY=
# SiliconFlow API基础URL
SILICONFLOW_API_BASE=https://api.siliconflow.cn/v1
# SiliconFlow模型名称
SILICONFLOW_MODEL_NAME=Pro/deepseek-ai/DeepSeek-V3
# SiliconFlow API超时时间（秒）
SILICONFLOW_TIMEOUT=30

# ======================
# DeepSeek配置 TODO
# ======================
# DeepSeek API密钥
DEEPSEEK_API_KEY=your_api_key_here
# DeepSeek API基础URL
DEEPSEEK_API_BASE=https://api.deepseek.com/v1
# DeepSeek模型名称
DEEPSEEK_MODEL_NAME=deepseek-chat
# DeepSeek API超时时间（秒）
DEEPSEEK_TIMEOUT=30



# ======================
# 数据库配置
# ======================
# MongoDB连接地址
MONGODB_URI=mongodb://localhost:27017/
# MongoDB数据库名称
MONGODB_DATABASE=chatbot_db

# ======================
# 系统配置
# ======================
# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# 运行环境 (development, production)
ENVIRONMENT=development
# 系统语言
LANGUAGE=zh-CN
# 时区设置
TIMEZONE=Asia/Shanghai

# ======================
# 机器人配置 （暂时不可用）
# ======================
# 机器人名称
BOT_NAME=智能助手
# 最大对话历史记录数
MAX_HISTORY=10
# 最大记忆数量
MAX_MEMORIES=1000
# 知识库更新间隔（秒）
KNOWLEDGE_UPDATE_INTERVAL=3600

# ======================
# 安全配置
# ======================
# 是否启用API密钥验证
ENABLE_API_AUTH=true
# 是否启用请求频率限制
ENABLE_RATE_LIMIT=true
# 最大请求频率（次/分钟）
MAX_REQUESTS_PER_MINUTE=60

# ======================
# 缓存配置
# ======================
# 是否启用缓存
ENABLE_CACHE=true
# 缓存过期时间（秒）
CACHE_EXPIRATION=3600
# 最大缓存条目数
MAX_CACHE_ENTRIES=1000

# ======================
# 情感系统配置
# ======================
# 情感更新间隔（秒）
EMOTION_UPDATE_INTERVAL=300
# 情感衰减率
EMOTION_DECAY_RATE=0.05
# 最大情感强度
MAX_EMOTION_INTENSITY=1.0
# 最小情感强度
MIN_EMOTION_INTENSITY=0.0

# ======================
# 知识库配置 （暂时不可用）
# ======================
# 知识库目录
KNOWLEDGE_DIR=data
# 知识库文件扩展名
KNOWLEDGE_FILE_EXTENSIONS=.txt
# 知识块大小
KNOWLEDGE_CHUNK_SIZE=1000
# 知识块重叠大小
KNOWLEDGE_CHUNK_OVERLAP=200
# 知识匹配置信度阈值
KNOWLEDGE_CONFIDENCE_THRESHOLD=0.6
# 最大关键点数量
MAX_KEY_POINTS=5